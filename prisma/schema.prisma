generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model users {
  userId   Int    @id @default(autoincrement())
  username String @db.VarChar(255)
  pswd     String @db.VarChar(255)
}

model customer {
  id        Int     @id @default(autoincrement())
  name      String
  phone     String  @unique
  address   String
  locality  String
  frequency String?
  hour      String
  dweek     String?
  no_week   Int?
  category  String
  price     Int
  created   String

  @@index([id])
}

model team {
  id   Int    @id @default(autoincrement())
  name String
}
