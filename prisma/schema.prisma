model users {
  userId   Int    @id @default(autoincrement())
  username String @db.VarChar(255)
  pswd     String @db.VarChar(255)
}

model customer {
  id        Int     @id @default(autoincrement())
  name      String
  phone     String  @unique
  address   String
  locality  String
  frequency String?
  hour      String
  dweek     String?
  no_week   Int?
  category  String
  price     Int
  created   String
  comments  String?
  duration  Int?    @default(2)

  @@index([id])
}

model team {
  id   Int    @id @default(autoincrement())
  name String
}

model ocasionalDates {
  id       Int     @id @default(autoincrement())
  customer String
  date     String
  price    Int
  duration Int
  comments String?
  address  String? @db.VarChar(255)
  locality String? @db.VarChar(255)

  @@index([id])
}

model completedDates {
  id       Int    @id @default(autoincrement())
  customer String
  price    Int
  date     String
}
