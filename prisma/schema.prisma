generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Users {
    userId   Int    @id @default(autoincrement())
    username String @db.VarChar(255)
    pswd     String @db.VarChar(255)
}

model Customer {
    id        Int     @id @default(autoincrement())
    name      String
    phone     String  @unique
    address   String
    locality  String
    frequency String?
    hour      String
    dweek     String?
    no_week   Int?
    category  String
    price     Int
    created   String
    comments  String?

    @@index([id])
}

model Team {
    id   Int    @id @default(autoincrement())
    name String
}

model OcasionalDates {
    id       Int     @id @default(autoincrement())
    customer String
    date     String
    price    Int
    duration Int
    comments String?

    @@index([id])
}

model CompletedDates {
    id       Int    @id @default(autoincrement())
    customer String
    price    Int
    date     String
}

